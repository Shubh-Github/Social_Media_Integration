<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img7"
    tools:context=".HomeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:inputType="text"
        android:textColor="#ffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity = "center"
        android:textSize="30sp"
        android:textColor="#ffff"
        android:layout_marginTop="380dp"
        android:id="@+id/profile_email"
        />
    <TextView
        android:id="@+id/profile_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="315dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity = "center"
        android:textSize="30sp"
        android:textColor="#ffff"
        android:layout_marginTop="380dp"
        android:id="@+id/profile_email1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic1"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_horizontal" />


    <!-- image view to show user profile image -->
    <ImageView
        android:id="@+id/user_profile_image_view"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp" />

    <!-- text view to show user details -->
    <TextView
        android:id="@+id/user_details_label"
        android:layout_width="400dp"
        android:layout_height="220dp"
        android:layout_marginTop="400dp"
        android:textColor="#ffff"
        android:text=""
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="336dp"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="30dp" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/FrameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="336dp"
                android:layout_height="41dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="0dp" />

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/default_twitter_login_button"
                android:layout_width="336dp"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:background="@color/tw__blue_default" />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
